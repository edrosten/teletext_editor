CXX=@CXX@
CXXFLAGS=@CXXFLAGS@
LDFLAGS=@LDFLAGS@ @LIBS@

all:bitmaps  editor

.PHONY: bitmaps

XBMS=$(shell ls resources/*.xbm)
PNGS=$(subst xbm,png,$(XBMS))

bitmaps:$(PNGS)

clean:
	rm -f *.o editor resources/*.png

editor: editor.o render.o
	$(CXX) -o $@ $^ $(LDFLAGS)

resources/%.png:resources/%.xbm
	xbmtopbm $< | pnmtopng >  $@
