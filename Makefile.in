CXX=@CXX@
CXXFLAGS=@CXXFLAGS@
LDFLAGS=@LDFLAGS@ @LIBS@

all:bitmaps readfont

.PHONY: bitmaps

XBMS=$(shell ls resources/*.xbm)
PNGS=$(subst xbm,png,$(XBMS))

bitmaps:$(PNGS)

readfont: readfont.o 
	$(CXX) -o $@ $< $(LDFLAGS)

resources/%.png:resources/%.xbm
	xbmtopbm $< | pnmdepth 255 | pnmtopng >  $@
